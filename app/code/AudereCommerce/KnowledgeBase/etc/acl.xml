<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::content">
                    <resource id="Magento_Backend::content_elements">
                        <resource id="AudereCommerce_KnowledgeBase::knowledgebase" title="Knowledge Base" translate="title" sortOrder="100">
                            <resource id="AudereCommerce_KnowledgeBase::post" title="Post" translate="title" sortOrder="10">
                                <resource id="AudereCommerce_KnowledgeBase::post_save" title="Save Post" translate="true" sortOrder="10" />
                                <resource id="AudereCommerce_KnowledgeBase::post_delete" title="Delete Post" translate="true" sortOrder="20" />
                            </resource>
                            <resource id="AudereCommerce_KnowledgeBase::category" title="Category" translate="title" sortOrder="20">
                                <resource id="AudereCommerce_KnowledgeBase::category_save" title="Save Category" translate="true" sortOrder="10" />
                                <resource id="AudereCommerce_KnowledgeBase::category_delete" title="Delete Category" translate="true" sortOrder="20" />
                            </resource>
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
