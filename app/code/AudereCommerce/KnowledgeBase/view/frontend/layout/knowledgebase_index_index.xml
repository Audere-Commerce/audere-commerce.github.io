<?xml version="1.0" encoding="UTF-8"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <title>KnowledgeBase</title>
    </head>
    <body>
        <referenceBlock name="page.main.title" remove="true" />
        <referenceBlock name="breadcrumbs">
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">Home</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string">Home</item>
                    <item name="label" xsi:type="string">Home</item>
                    <item name="link" xsi:type="string">{{baseUrl}}</item>
                </argument>
            </action>
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">KnowledgeBase</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string">KnowledgeBase</item>
                    <item name="label" xsi:type="string">KnowledgeBase</item>
                </argument>
            </action>
        </referenceBlock>
        <referenceContainer name="page.wrapper">
            <block class="AudereCommerce\KnowledgeBase\Block\Template" name="top.banner" template="AudereCommerce_KnowledgeBase::list/topbanner.phtml" before="main.content" />
        </referenceContainer>
        <referenceContainer name="content">
            <block class="AudereCommerce\KnowledgeBase\Block\Listing" name="knowledgebase.list" template="AudereCommerce_KnowledgeBase::list/items.phtml" />
        </referenceContainer>
    </body>
</page>
