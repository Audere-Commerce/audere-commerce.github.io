<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <move element="page.main.title" destination="top.banner" />
        <move element="breadcrumbs" destination="top.banner" />
        <referenceContainer name="top.page">
            <block class="Magento\Framework\View\Element\Template" name="top.banner" template="Magefan_Blog::post/list/topbanner.phtml" before="main.content" />
        </referenceContainer>
    </body>
</page>
