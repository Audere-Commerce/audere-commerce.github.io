<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <move element="page.main.title" destination="top.banner" />
        <move element="contactForm" destination="contact.wrapper" before="contact.details" />
        <referenceContainer name="top.page">
            <block class="Magento\Framework\View\Element\Template" name="top.banner" template="Magento_Contact::topbanner.phtml" />
        </referenceContainer>
        <referenceContainer name="content">
            <container name="contact.wrapper" htmlTag="div" htmlClass="contact-wrapper">
                <block class="Magento\Framework\View\Element\Template" name="contact.details" template="Magento_Contact::details.phtml" />
            </container>
        </referenceContainer>
    </body>
</page>
